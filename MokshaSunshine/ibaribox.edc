group { "e/modules/ibar/menu";
	images.image: "base_ibar.png" COMP;
	parts {
		spacer { "sizer";
			desc { "default"; }
			desc { "hidden"; minmul: 0 0;
				fixed: 1 1;
				rel1.relative: 0.5 1.0;
				rel2.relative: 0.5 1.0;
			}
		}
		rect { "clip";
			desc { "default";
				rel1.offset: -9999 -9999;
				rel2.offset: 9999 9999;
			}
			desc { "hidden"; color: "#00000000"; inherit; }
		}
		part { "base"; nomouse;
			clip_to: "clip";
			desc { "default"; color: VISIBLE;
				align: 0.5 0.0;
				rel1.to: "sizer";
				rel2.to: "sizer";
				image.normal: "base_ibar.png";
				image.border: 17 17 17 1;
				fill.smooth: 0;
			}
		}
		box { "e.box"; clip: "clip";
			desc { "default";
				rel1.to: "sizer";
				rel1.offset: 12 12;
				rel2.to: "sizer";
				rel2.offset: -17 -17;
				box.layout: "vertical";
				box.padding: 0 0;
				box.align: 0.5 0.5;
				box.min: 1 1;
			}
		}
	}

	programs {
		program { signal: "e,state,hidden"; source: "e";
			action: STATE_SET "hidden" 0.0;
			target: "sizer";
			target: "clip";
		}
		program { signal: "e,action,show"; source: "e";
			action: STATE_SET "default" 0.0;
			target: "sizer";
			target: "clip";
			//~ transition: SINUSOIDAL 0.2;
			after: "show2";
		}
		program { "show2";
			action: SIGNAL_EMIT "e,action,show,done" "";
		}
		program { signal: "e,action,hide"; source: "e";
			action: STATE_SET "hidden" 0.0;
			target: "sizer";
			target: "clip";
			//~ transition: SINUSOIDAL 0.2;
			after: "hide2";
		}
		program { "hide2";
			action: SIGNAL_EMIT "e,action,hide,done" "";
		}
	}
}

